<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Website</title>
  
  <style>
    /* CSS cho header */
/* CSS cho header */
.header {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
  color: black;
}

.header__left {
  display: flex;
  align-items: center;
}

.header__logo {
  width: 150px;
}

.header__directory {
  display: flex;
  gap: 20px;
  margin-left: 20px;
}

.header__directory-link {
  color: white;
  text-decoration: none;
}

.header__directory-link.active {
  font-weight: bold;
}

.header__right {
  display: flex;
  align-items: center;
}

.header__icon {
  display: flex;
  align-items: center;
  margin-right: 20px;
}

.header__icon-btn {
  background-color: transparent;
  border: none;
  color: white;
  font-size: 18px;
}

.header__button button {
  background-color: #ff6347;
  color: white;
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  margin-left: 10px;
}

.header__user img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.header__user p {
  margin: 0;
}

.header__user-setting {
  display: none;
}

/* Phần pop-up chung cho login và register */
.header__popup {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
}

.form-container {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  width: 320px;
  max-width: 90%;
}

.form-container h2 {
  text-align: center;
  margin-bottom: 20px;
}

.form-container label {
  font-weight: bold;
  margin-bottom: 5px;
}

.form-container input {
  width: 100%;
  padding: 10px;
  margin: 10px 0;
  border-radius: 5px;
  border: 1px solid #ddd;
  box-sizing: border-box;
}

.form-container button {
  width: 100%;
  padding: 10px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin: 10px 0;
}

.form-container button.close-btn {
  background-color: #f44336;
}

.form-container button:hover {
  background-color: #45a049;
}

.form-container button.close-btn:hover {
  background-color: #e53935;
}

/* Hiển thị thông tin người dùng */
.header__user-info {
  display: none;
  align-items: center;
  margin-left: 20px;
}

.header__user-info img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.header__user-info p {
  margin: 0;
  font-weight: bold;
}

/* Nút Logout */
.header__user-info button {
  background-color: #f44336; /* Màu đỏ */
  color: white;
  padding: 8px 15px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 14px;
  font-weight: bold;
  transition: background-color 0.3s, transform 0.2s;
}

.header__user-info button:hover {
  background-color: #e53935; /* Màu đỏ đậm khi hover */
  transform: scale(1.05); /* Tăng kích thước nút một chút khi hover */
}

.header__user-info button:focus {
  outline: none; /* Loại bỏ viền focus */
}

  </style>
</head>
<body>

  <div class="header">
    <div class="header__left">
      <button href="javascript:void(0);" class="menu-bar">
        <i class="fa fa-bars"></i>
      </button>
      <a href="/">
        <img class="header__logo" src="/img/logo/logo.png" alt="netflix-font" />
      </a>

      <nav class="header__directory">
        <a href="/" class="header__directory-link active">Trang chủ</a>
        <a href="/phim-bo" class="header__directory-link">Phim Bộ</a>
        <a href="/phim-le" class="header__directory-link">Phim Lẻ</a>
        <a href="/phim-moi" class="header__directory-link">Phim Mới Cập Nhật</a>
        <div class="header__directory-link category">Thể Loại</div>
      </nav>
    </div>

    <div class="header__right">
      <div class="header__icon">
        <form action="/search" class="header__icon-search">
          <input type="text" name="keyword" class="header__icon-input" placeholder="Tìm Kiếm Phim Muốn Xem" required />
          <button type="submit" class="header__icon-btn">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
        <a class="header__icon-bell" href="">
          <i class="fa-regular fa-bell"></i>
        </a>
      </div>

      <div class="header__button">
        <button class="header__register" id="registerBtn">Register</button>
        <button class="header__login" id="loginBtn">Login</button>
      </div>

<div class="header__user-info" id="userInfo">
  <img src="https://i.pravatar.cc/150?img=3" alt="User Avatar" />
  <p id="userName">Username</p>
</div>


      <div class="header__user-setting">
        <ul>
          <li><a href="">Thông Tin Tài Khoản</a></li>
          <li><a href="">Danh sách phim yêu thích</a></li>
          <li><a href="">Đổi mật khẩu</a></li>
          <li><a href="">Đăng xuất</a></li>
        </ul>
      </div>

    <!-- Phần đăng nhập pop-up -->
      <div class="header__popup" id="loginPopup">
        <div class="form-container">
          <h2>Login</h2>
          <form action="/login" method="post" id="loginForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" placeholder="Nhập tên đăng nhập" required />
            <div class="info-text">Tên đăng nhập phải dài ít nhất 6 ký tự.</div>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required />
            <span class="eye-icon" id="togglePassword">&#128065;</span>
            <button type="submit" class="login-btn">Login</button>
            <button type="button" class="close-btn" id="closeLoginBtn">Close</button>
          </form>
        </div>
      </div>

    <!-- Phần đăng ký pop-up -->
      <div class="header__popup" id="registerPopup">
        <div class="form-container">
          <h2>Register</h2>
          <form action="/register" method="post" id="registerForm">
            <label for="regUsername">Username:</label>
            <input type="text" id="regUsername" name="username" placeholder="Chọn tên đăng nhập" required />
            <div class="info-text">Tên đăng nhập phải dài ít nhất 6 ký tự.</div>

            <label for="regEmail">Email:</label>
            <input type="email" id="regEmail" name="email" placeholder="Nhập email của bạn" required />
            <div class="info-text">Hãy nhập email hợp lệ, ví dụ: email@example.com.</div>

            <label for="regPassword">Password:</label>
            <input type="password" id="regPassword" name="password" placeholder="Nhập mật khẩu" required />
            <div class="info-text">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số.</div>

            <label for="regConfirmPassword">Confirm Password:</label>
            <input type="password" id="regConfirmPassword" name="confirm_password" placeholder="Xác nhận mật khẩu" required />
            <div class="info-text">Vui lòng nhập lại mật khẩu của bạn để xác nhận.</div>

            <div class="error" id="registerError"></div>

            <button type="submit" class="login-btn">Register</button>
            <button type="button" class="close-btn" id="closeRegisterBtn">Close</button>
          </form>
        </div>
      </div>
    </div>
  </div>

<script>
// Lấy các phần tử cần thiết
const loginBtn = document.getElementById('loginBtn');
const registerBtn = document.getElementById('registerBtn');
const loginPopup = document.getElementById('loginPopup');
const registerPopup = document.getElementById('registerPopup');
const closeLoginBtn = document.getElementById('closeLoginBtn');
const closeRegisterBtn = document.getElementById('closeRegisterBtn');
const userInfo = document.getElementById('userInfo');
const userNameElement = document.getElementById('userName');
const logoutBtn = document.createElement('button');
logoutBtn.textContent = 'Logout'; // Tạo nút Logout

// Hàm giả lập đăng nhập
function handleLogin(username) {
  userNameElement.textContent = username;
  userInfo.style.display = 'flex';
  loginPopup.style.display = 'none';

  // Lưu thông tin người dùng vào localStorage
  localStorage.setItem('username', username);

  // Ẩn các nút đăng nhập và đăng ký
  loginBtn.style.display = 'none';
  registerBtn.style.display = 'none';

  // Thêm nút Logout
  userInfo.appendChild(logoutBtn);
  logoutBtn.style.marginLeft = '10px'; // Đảm bảo nút Logout có khoảng cách với tên người dùng

  // Sự kiện cho nút Logout
  logoutBtn.addEventListener('click', () => {
    localStorage.removeItem('username');
    localStorage.removeItem('avatar');
    userInfo.style.display = 'none';
    loginBtn.style.display = 'block';
    registerBtn.style.display = 'block';
    logoutBtn.style.display = 'none';
  });
}

// Hàm giả lập đăng ký
function handleRegister(username) {
  userNameElement.textContent = username;
  userInfo.style.display = 'flex';
  registerPopup.style.display = 'none';

  // Lưu thông tin người dùng vào localStorage
  localStorage.setItem('username', username);

  // Ẩn các nút đăng nhập và đăng ký
  loginBtn.style.display = 'none';
  registerBtn.style.display = 'none';

  // Thêm nút Logout
  userInfo.appendChild(logoutBtn);
  logoutBtn.style.marginLeft = '10px'; // Đảm bảo nút Logout có khoảng cách với tên người dùng

  // Sự kiện cho nút Logout
  logoutBtn.addEventListener('click', () => {
    localStorage.removeItem('username');
    localStorage.removeItem('avatar');
    userInfo.style.display = 'none';
    loginBtn.style.display = 'block';
    registerBtn.style.display = 'block';
    logoutBtn.style.display = 'none';
  });
}

// Kiểm tra trạng thái đăng nhập khi trang được tải lại
window.addEventListener('load', () => {
  const storedUsername = localStorage.getItem('username');
  if (storedUsername) {
    handleLogin(storedUsername); // Nếu có thông tin người dùng trong localStorage, hiển thị thông tin đó
  }
});

// Mở pop-up đăng nhập
loginBtn.addEventListener('click', () => {
  loginPopup.style.display = 'flex';
  registerPopup.style.display = 'none'; // Đảm bảo form đăng ký không hiển thị
});

// Mở pop-up đăng ký
registerBtn.addEventListener('click', () => {
  registerPopup.style.display = 'flex';
  loginPopup.style.display = 'none'; // Đảm bảo form đăng nhập không hiển thị
});

// Đóng pop-up đăng nhập
closeLoginBtn.addEventListener('click', () => {
  loginPopup.style.display = 'none';
});

// Đóng pop-up đăng ký
closeRegisterBtn.addEventListener('click', () => {
  registerPopup.style.display = 'none';
});

// Đóng pop-up khi nhấn ra ngoài form
window.addEventListener('click', (event) => {
  if (event.target === loginPopup) {
    loginPopup.style.display = 'none';
  }
  if (event.target === registerPopup) {
    registerPopup.style.display = 'none';
  }
});

// Giả lập sự kiện đăng nhập khi nhấn nút Login
document.getElementById('loginForm').addEventListener('submit', function (e) {
  e.preventDefault(); // Ngừng hành động mặc định của form
  const username = document.getElementById('username').value;
  handleLogin(username); // Xử lý đăng nhập
});

// Giả lập sự kiện đăng ký khi nhấn nút Register
document.getElementById('registerForm').addEventListener('submit', function (e) {
  e.preventDefault(); // Ngừng hành động mặc định của form
  const username = document.getElementById('regUsername').value;
  handleRegister(username); // Xử lý đăng ký
});

</script>


</body>
</html>
