<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Website</title>
  
  <style>
    /* CSS cho header */
    .header {
      display: flex;
      justify-content: space-between;
      padding: 10px 20px;

      color: black;
    }

    .header__left {
      display: flex;
      align-items: center;
    }

    .header__logo {
      width: 150px;
    }

    .header__directory {
      display: flex;
      gap: 20px;
      margin-left: 20px;
    }

    .header__directory-link {
      color: white;
      text-decoration: none;
    }

    .header__directory-link.active {
      font-weight: bold;
    }

    .header__right {
      display: flex;
      align-items: center;
    }

    .header__icon {
      display: flex;
      align-items: center;
      margin-right: 20px;
    }

    .header__icon-btn {
      background-color: transparent;
      border: none;
      color: white;
      font-size: 18px;
    }

    .header__button button {
      background-color: #ff6347;
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      margin-left: 10px;
    }

    .header__user img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .header__user p {
      margin: 0;
    }

    .header__user-setting {
      display: none;
    }

    /* Phần pop-up chung cho login và register */
    .header__popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }

    .form-container {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      width: 320px;
      max-width: 90%;
    }

    .form-container h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .form-container label {
      font-weight: bold;
      margin-bottom: 5px;
    }

    .form-container input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ddd;
      box-sizing: border-box;
    }

    .form-container button {
      width: 100%;
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin: 10px 0;
    }

    .form-container button.close-btn {
      background-color: #f44336;
    }

    .form-container button:hover {
      background-color: #45a049;
    }

    .form-container button.close-btn:hover {
      background-color: #e53935;
    }
  </style>
</head>
<body>

  <div class="header">
    <div class="header__left">
      <button href="javascript:void(0);" class="menu-bar">
        <i class="fa fa-bars"></i>
      </button>
      <a href="/">
        <img class="header__logo" src="/img/logo/logo.png" alt="netflix-font" />
      </a>

      <nav class="header__directory">
        <a href="/" class="header__directory-link active">Trang chủ</a>
        <a href="/phim-bo" class="header__directory-link">Phim Bộ</a>
        <a href="/phim-le" class="header__directory-link">Phim Lẻ</a>
        <a href="/phim-moi" class="header__directory-link">Phim Mới Cập Nhật</a>
        <div class="header__directory-link category">Thể Loại</div>
      </nav>
    </div>

    <div class="header__right">
      <div class="header__icon">
        <form action="/search" class="header__icon-search">
          <input type="text" name="keyword" class="header__icon-input" placeholder="Tìm Kiếm Phim Muốn Xem" required />
          <button type="submit" class="header__icon-btn">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
        <a class="header__icon-bell" href="">
          <i class="fa-regular fa-bell"></i>
        </a>
      </div>

      <div class="header__button">
        <button class="header__register" id="registerBtn">Register</button>
        <button class="header__login" id="loginBtn">Login</button>
      </div>

      <div class="header__user">
        <img src="/img/banner/one piece red/One_Piece_Film-_Red_-_Áp_phích_Việt_Nam.jpg" alt="" />
        <p>Admin</p>
      </div>

      <div class="header__user-setting">
        <ul>
          <li><a href="">Thông Tin Tài Khoản</a></li>
          <li><a href="">Danh sách phim yêu thích</a></li>
          <li><a href="">Đổi mật khẩu</a></li>
          <li><a href="">Đăng xuất</a></li>
        </ul>
      </div>

    <!-- Phần đăng nhập pop-up -->
      <div class="header__popup" id="loginPopup">
        <div class="form-container">
          <h2>Login</h2>
          <form action="/login" method="post" id="loginForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" placeholder="Nhập tên đăng nhập" required />
            <div class="info-text">Tên đăng nhập phải dài ít nhất 6 ký tự.</div>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required />
            <span class="eye-icon" id="togglePassword">&#128065;</span>
            <button type="submit" class="login-btn">Login</button>
            <button type="button" class="close-btn" id="closeLoginBtn">Close</button>
          </form>
        </div>
      </div>

    <!-- Phần đăng ký pop-up -->
      <div class="header__popup" id="registerPopup">
        <div class="form-container">
          <h2>Register</h2>
          <form action="/register" method="post" id="registerForm">
            <label for="regUsername">Username:</label>
            <input type="text" id="regUsername" name="username" placeholder="Chọn tên đăng nhập" required />
            <div class="info-text">Tên đăng nhập phải dài ít nhất 6 ký tự.</div>

            <label for="regEmail">Email:</label>
            <input type="email" id="regEmail" name="email" placeholder="Nhập email của bạn" required />
            <div class="info-text">Hãy nhập email hợp lệ, ví dụ: email@example.com.</div>

            <label for="regPassword">Password:</label>
            <input type="password" id="regPassword" name="password" placeholder="Nhập mật khẩu" required />
            <div class="info-text">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số.</div>

            <label for="regConfirmPassword">Confirm Password:</label>
            <input type="password" id="regConfirmPassword" name="confirm_password" placeholder="Xác nhận mật khẩu" required />
            <div class="info-text">Vui lòng nhập lại mật khẩu của bạn để xác nhận.</div>

            <div class="error" id="registerError"></div>

            <button type="submit" class="login-btn">Register</button>
            <button type="button" class="close-btn" id="closeRegisterBtn">Close</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Lấy các phần tử cần thiết
    const loginBtn = document.getElementById('loginBtn');
    const registerBtn = document.getElementById('registerBtn');
    const loginPopup = document.getElementById('loginPopup');
    const registerPopup = document.getElementById('registerPopup');
    const closeLoginBtn = document.getElementById('closeLoginBtn');
    const closeRegisterBtn = document.getElementById('closeRegisterBtn');

    // Mở pop-up đăng nhập
    loginBtn.addEventListener('click', () => {
      loginPopup.style.display = 'flex';
      registerPopup.style.display = 'none'; // Đảm bảo form đăng ký không hiển thị
    });

    // Mở pop-up đăng ký
    registerBtn.addEventListener('click', () => {
      registerPopup.style.display = 'flex';
      loginPopup.style.display = 'none'; // Đảm bảo form đăng nhập không hiển thị
    });

    // Đóng pop-up đăng nhập
    closeLoginBtn.addEventListener('click', () => {
      loginPopup.style.display = 'none';
    });

    // Đóng pop-up đăng ký
    closeRegisterBtn.addEventListener('click', () => {
      registerPopup.style.display = 'none';
    });

    // Đóng pop-up khi nhấn ra ngoài form
    window.addEventListener('click', (event) => {
      if (event.target === loginPopup) {
        loginPopup.style.display = 'none';
      }
      if (event.target === registerPopup) {
        registerPopup.style.display = 'none';
      }
    });
  </script>

</body>
</html>
